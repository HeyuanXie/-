/* pages/message/plan.wxss */
page {
  background-color: #f5f5f5;
}

.list-item {
  display: block;
  padding: 0;
}

.date {
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #888;
  text-align: center;
}

.content {
  margin: 0 30rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 10rpx;
}

.title {
  font-size: 32rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  padding-top: 32rpx;
  color: #888;
}
