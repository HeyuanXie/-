page {
  background-color: #f5f5f5;
}

.topView {
  height: 280rpx;
}

.backImg {
  width: 100%;
  height: 280rpx;
  position: absolute;
  top: 0rpx;
  z-index: -1;
}

.avatar {
  width: 68rpx;
  height: 68rpx;
  margin: 30rpx;
  background-color: purple;
  border-radius: 50%;
}

.hi {
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  color: #fff;
}

.titleLbl {
  padding: 6rpx 0 0 30rpx;
  font-family: PingFang-SC-Bold;
  font-size: 40rpx;
  color: #fff;
