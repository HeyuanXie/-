/* pages/mine/staffDetail.wxss */

page {
  background-color: #f5f5f5;
}

.top {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 416rpx;
  align-items: center;
  background-color: white;
}

.avatar {
  margin-top: 32rpx;
  width: 154rpx;
  height: 154rpx;
  border-radius: 50%;
  background-color: pink;
}

.name {
  padding-top: 25rpx;
  font-size: 36rpx;
  color: #000;
}

.position {
  padding-top: 24rpx;
  font-size: 28rpx;
  color: #888;
}

.phone {
  padding-top: 32rpx;
  font-size: 30rpx;
  color: #7c87df;
}

.customTab {
  background: white;
  z-index: 10;
}

.task-list {
  padding-bottom: 30rpx;
}

.list-item {
  display: flex;
  flex-direction: column;
  margin: 24rpx 30rpx;
  margin-bottom: 0;
  padding: 40rpx 24rpx;
  border-radius: 10rpx;
  background-color: white;
}

.title {
  font-size: 32rpx;
  color: #000;
  padding-bottom: 34rpx;
}

.date, .person {
  font-size: 26rpx;
  color: #888;
}
