/* pages/work/missionDetail.wxss */

.task-list {
  padding-bottom: 100rpx;
}

.list-item {
  display: flex;
  flex-direction: column;
  border-bottom: 24rpx solid #f5f5f5;
}

.title {
  font-size: 36rpx;
  color: #000;
  padding-top: 17rpx;
}

.desc {
  font-size: 32rpx;
  color: #888;
  padding-top: 40rpx;
}

.time {
  font-size: 28rpx;
}

.alert {
  font-size: 28rpx;
  padding-top: 24rpx;
}

.alert text {
  font-size: 28rpx;
  color: #7c87df;
}

.dateContent {
  display: flex;
  justify-content: space-between;
}

.dateContent input {
  text-align: right;
  font-size: 32rpx;
}

.date:not(:last-of-type) {
  border-bottom: 1rpx solid #f5f5f5;
}

.addFeedback {
  color: #7c87df;
  font-size: 28rpx;
}

.feedback {
  font-size: 32rpx;
  padding: 40rpx 0 100rpx 0; 
  color: #c2c2c2; 
  text-align: center;
}

.finishBtn {
  width: 350rpx;
  height: 90rpx;
  border-radius: 45rpx;
  line-height: 90rpx;
  background-color: #7c87df;
  color: white;
  margin: 53rpx 0 20rpx 0;
  text-align: center;
  font-size: 32rpx;
  align-self: center;
}

.deleteBtn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 31rpx;
  color: #000;
  text-align: center;
  background-color: white;
}
