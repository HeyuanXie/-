/* pages/work/missionAndPlan.wxss */

page {
  background-color: #f5f5f5;
}

.radioContent {
  height: 98rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: white;
  z-index: 10;
}

.radio-group {
  background-color: white;
  display: flex;
  margin: 15rpx 30rpx;
  border: 1px solid #7c87df;
  border-radius: 5px;
}

.radio-group radio {
  display: none;
}

.selected {
  background-color: #7c87df;
  color: white;
}

/* label均匀分布，文字居中 */

label {
  font-size: 28rpx;
  text-align: center;
  line-height: 68rpx;
  height: 68rpx;
  flex: 1;
  border-right: 1px solid #7c87df;
}

label:last-child {
  border-right: 0;
}

.customTab {
  position: fixed;
  width: 100%;
  top: 98rpx;
  background-color: white;
  z-index: 10;
  max-height: 205rpx;
}

.task-list {
  padding-top: 182rpx;
  padding-bottom: 120rpx;
}

.list-item {
  display: flex;
  flex-direction: column;
}

.titleBox {
  display: flex;
  padding: 14rpx 0 0 0;
}

.titleBox .l-r {
  padding-right: 0 !important;
}

.desc {
  padding: 23rpx 0;
  font-size: 28rpx;
  color: #888;
}

.box {
  padding: 12rpx 0;
  display: flex;
  flex-direction: column;
}

.time, .person, .creater {
  font-size: 28rpx;
}

.person, .creater {
  padding-bottom: 10rpx;
}

.btns {
  padding-top: 20rpx;
  display: flex;
  flex-direction: row-reverse;
}

.btn {
  color: #555;
}

.btn:not(:last-child) {
  color: #7c87df;
  border-color: #7c87df;
  margin-left: 14rpx;
}

.addBtn {
  z-index: 9;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  background-color: white;
  border-top: 1rpx solid #f5f5f5;
}