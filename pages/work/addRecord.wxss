/* pages/work/addRecord.wxss */
@import "./create.wxss";

page {
  background-color: #f5f5f5;
}

.list-item {
  background-color: white;
}

.list-item .l-l {
  color: #888;
}

.textview {
  width: 100%;
  outline: none;
  border-radius: 0;
  -webkit-appearance: none;
  -moz-appearance: none;
  overflow: auto;
  resize: none;
  border: none;
  display: block;
  min-height: 253rpx;
  padding: 5rpx 0;
  font-size: 32rpx;
}

.photo {
  margin-bottom: 24rpx;
  background-color: white;
}

.p-tit {
  font-size: 32rpx;
}

.placeholder {
  font-size: 32rpx !important;
  color: #888 !important;
  font-weight: normal !important;
  font-style: normal !important;
  font-family: "iconfont" !important;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
