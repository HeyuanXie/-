/* pages/work/create.wxss */

page {
  background-color: #f5f5f5;
}

.list-item {
  padding-right: 0 !important;
  background-color: white;
}

.list-item:not(:last-child) {
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item .l-r {
  padding-right: 20rpx;
}

.textview {
  width: 100%;
  outline: none;
  border-radius: 0;
  -webkit-appearance: none;
  -moz-appearance: none;
  overflow: auto;
  resize: none;
  border: none;
  display: block;
  min-height: 253rpx;
  padding: 5rpx 0;
  font-size: 32rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.commitBtn {
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  margin: 0 30rpx;
  position: absolute;
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  text-align: center;
  color: white;
  font-size: 32rpx;
  background-color: #7c87df;
  bottom: 54rpx;
}
